<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') -%>
        <link rel="stylesheet" href="/css/products/style-productCart.css">
        <script src="/js/productCart.js"></script>
</head>

<body>
    <%- include('../partials/header') -%>

        <main>
            <% let precioTotal = 0; %>
            <% if (products != '') { %>
                <% products.forEach(product => { %>
                    <%- include('../partials/itemCart.ejs', {product: product}) -%>
                    <% precioTotal += Number(product.price) %>  
                <% }) %>
            <% } else { %>
                <h3 class="vacio">No hay productos en el carrito</h3>
            <% } %> 
             
                                    <div class="container-envio-pago">

                                        <div class="container-opciones-compra">
                                            <div>
                                                <label for="">Tipo de Envio:</label><br>
                                                <select name="envio" id="" class="field">
                                                    <option value="correo">Retiro al correo</option>
                                                    <option value="domicilio">Envio a domicilio</option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="container-opciones-compra">

                                            <div>
                                                <label for="">Metodo de pago:</label><br>
                                                <select name="pago" id="" class="field">
                                                    <option value="transferencia">Transferencia bancaria</option>
                                                    <option value="tarjeta">Tarjeta de Credito/Debito</option>
                                                    <option value="mercado">Mercado Pago</option>
                                                    <option value="bitcoin">Bitcoin</option>
                                                </select>
                                            </div>
                                        </div>
                                        <hr style="color: #000000;width: 60%;background-color: #000000;height: 3px;"><br>

                                        <h4 class="container-precio-porducto" id="pecioTotal">Precio total: $<%= precioTotal %> </h4><br>
                                        <hr>
                                        <div class="container-btn-comprar">
                                            <button type="submit" type="button" class="btn-comprar">Comprar</button>
                                        </div>
                                        
                                    </div>

        </main>

        <%- include('../partials/footer') %>


</body>

</html>