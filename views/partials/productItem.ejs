<a class="container-article" href="/products/detail/<%- id -%>  ">

    <article class="article">
        <img src="../../public/images/prodcuts/<%- imagen %>" alt="Imagen de producto">
        <div class="container-info">
            <p class="nombre-producto">
                <%= nombre %>
            </p>
            <p class="precio-producto">
                <%= precio %>
            </p>
        </div>
    </article>
    <style>
        .container-article {
            width: 280px;
            text-decoration: none;
            color: #0e0b16;
            margin: 10px 20px;
            max-width: 350px;
        }
        
        .article {
            background-color: #e2e0f6;
            border-radius: 8px;
            padding: 10px;
            margin: auto;
            width: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            border: solid 3px #4f5d9c;
            transition: box-shadow .5s;
        }
        
        .article:hover {
            box-shadow: 5px 5px 12px #4f5d9c;
        }
        
        .article img {
            margin-top: 5px;
            width: 90%;
            margin: auto;
        }
        
        .container-info {
            border-top: solid 2px #4f5d9c;
            padding: 10px 5px;
            width: 100%;
        }
        
        .nombre-producto {
            text-align: center;
            color: #140f07;
            font-family: 'Noto Sans', sans-serif;
        }
        
        .precio-producto {
            text-align: center;
            font-size: 18px;
            color: #24211c;
            font-family: 'Noto Sans', sans-serif;
        }
        
        @media (min-width: 769px) {
            .container-article {
                margin-bottom: 40px;
            }
            .container-article a {
                margin: 10px;
            }
        }
    </style>
</a>