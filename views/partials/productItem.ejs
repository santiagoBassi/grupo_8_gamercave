<a class="container-article" href="/products/detail/<%- id -%>  ">

    <article class="article">
        <img src="/images/products/<%- img1 -%>" alt="Imagen de producto">
        <div class="container-info">
            <div class="flex">
                <p class="precio-producto">
                    $
                    <%= price %>
                </p>
                <p class="precio-producto">15% OFF</p>
            </div>


            <p class="nombre-producto">
                <%= name %>
            </p>

        </div>
    </article>
    <style>
        .container-article {
            width: 280px;
            text-decoration: none;
            color: #0e0b16;
            margin: 10px 20px;
            max-width: 350px;
        }
        
        .article {
            background-color: #9696b5;
            padding: 10px;
            margin: auto;
            width: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            transition: box-shadow .5s;
            height: 400px;
            box-shadow: 0px 0px 10px rgb(0 0 0);
        }
        
        .article:hover {
            box-shadow: 5px 5px 12px #4f5d9c;
        }
        
        .article img {
            height: 250px;
            margin-top: 5px;
            width: 250px;
            margin: auto;
            margin-bottom: 5px;
            border-radius: 2px;
        }
        
        .container-info {
            margin: auto;
            padding: inherit;
            background-color: #4b207973;
            align-content: center;
            display: flex;
            flex-direction: column;
            justify-content: space-around;
            padding: 10px 5px;
            width: 260px;
            height: 117px;
        }
        
        .nombre-producto {
            text-align: center;
            color: #140f07;
            overflow: hidden;
            letter-spacing: 1px;
            padding-bottom: 2px;
            text-overflow: ellipsis;
            padding-left: 4px;
            transition: box-shadow .5s;
        }
        
        .precio-producto {
            font-weight: 500;
            margin-bottom: 1px;
            text-align: center;
            font-size: 18px;
            color: #18161a;
            font-family: 'Noto Sans', sans-serif;
        }
        
        @media (min-width: 769px) {
            .container-article {
                margin-bottom: 40px;
            }
            .container-article a {
                margin: 10px;
            }
        }
    </style>
</a>