<div class="container-producto-carrito">
    <a href="/products/deleteToCart/<%= product.id %>"><i class="close fas fa-times"></i></a>
    <div class="container-img-producto">
        <img src="/images/products/<%= product.images[0].name%> " alt="">
    </div>
    <div class="container-info-producto">
        <div class="container-nombre-porducto">
            <p>
                <%= product.name %>
            </p>
        </div>
        <div class="container-cantidad-precio">
            <form class="container-cantidad">
                <div class="btn-aumen-decre" id="decrease<%= product.id %>" onclick="decreaseValue('<%= product.id %>');updatePrice('price<%= product.id %>','<%= product.id %>')"
                    value="Decrease Value">
                    -
                </div>
                <input type="number" id="<%= product.id %>" value="1" />
                <div class="btn-aumen-decre" id="increase<%= product.id %>" onclick="increaseValue('<%= product.id %>');updatePrice('price<%= product.id %>','<%= product.id %>')"
                    value="Increase Value">
                    +
                </div>
            </form>
            <div class="container-precio-porducto">
                <p style="display: none;" id="priceInitial<%= product.id %>"><%= product.price %></p>
                <p id="price<%= product.id %>">
                    $ <%= product.price %>
                </p>
            </div>
        </div>
    </div>
</div>