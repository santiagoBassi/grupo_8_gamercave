<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') -%>
        <link rel="stylesheet" href="/css/admin/style-adminPanel.css">

</head>

<body>

    <%- include('../partials/header')%>
        <main class="container-content">

            <a href="/admin/create">Nuevo Producto</a>

            <table class="table">
                <tr>
                    <th>id</th>
                    <th>img</th>
                    <th>name</th>
                    <th>actions</th>
                </tr>
                <% products.forEach((product) => { %>
                    <tr>
                        <th>
                            <%= product.id %>
                        </th>
                        <th>
                            <img width="50px" src="/images/products/<%= product.img1 %>" alt="">

                        </th>
                        <th>
                            <%= product.name %>
                        </th>
                        <th>
                            <form action="/admin/<%= product.id %>/delete?_method=DELETE" method="POST">
                                <button type="submit">Delete</button>
                            </form>
                            <a href="/admin/<%= product.id %>/edit">Editar</a>
                        </th>
                    </tr>
                    <% }) %>
            </table>

        </main>


        <%- include('../partials/footer') %>
</body>

</html>